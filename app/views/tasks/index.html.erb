<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>  <!-- ##### ADDED parameter to the route ###### -->
        <td><%= link_to 'Destroy', task, data: { confirm: 'Are you sure?' }, method: :delete %></td>
      </tr>               <!--  ##### ADDED explicit method: :delete to direct to the appropriate route. ##### -->
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
